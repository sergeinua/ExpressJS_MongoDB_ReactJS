<% include ../../partials/admin-header.ejs %>

<div class="content">
    <div class="container spark-screen">
        <div class="row">
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading"><%= data.formTitle %></div>
                    <div class="panel-body">

                        <% if (message) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>

                        <form action="<%= data.formAction %>" method="<%= data.formMethod %>" class="clearfix">
                            <div class="form-group input-group-lg">
                                <input type="text" name="title" placeholder="title" value="<%= page.title %>">
                            </div>
                            <div class="form-group input-group-lg">
                                <input type="text" name="content" placeholder="content" value="<%= page.content %>">
                            </div>
                            <div class="form-group input-group-lg">
                                <input type="text" name="slug" placeholder="slug" value="<%= page.slug %>">
                            </div>
                            <div class="form-group input-group-lg">
                                <button type="submit" class="btn btn-lg btn-success"><%= data.btnText %></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../../partials/admin-footer.ejs %>