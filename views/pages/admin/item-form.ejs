<% include ../../partials/admin-header.ejs %>

<div class="content">
    <div class="container spark-screen">
        <div class="row">
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading"><%= data.formTitle %></div>
                    <div class="panel-body">

                        <% if (message) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>

                        <form action="<%= data.formAction %>" method="<%= data.formMethod %>" class="clearfix">
                            <div class="row">
                                <div class="col-lg-12">
                                    <span id="locationFull"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group input-group-lg">
                                        <label for="code">Code</label>
                                        <input type="text" name="code" placeholder="code" value="<%= item.code %>">
                                    </div>
                                    <div class="form-group input-group-lg">
                                        <label for="code">Price</label>
                                        <input type="text" name="price" placeholder="price" value="<%= item.price %>">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group input-group-lg">
                                        <label for="code">Beds</label>
                                        <input type="text" name="beds" placeholder="beds" value="<%= item.beds %>">
                                    </div>
                                    <div class="form-group input-group-lg">
                                        <label for="code">Bath</label>
                                        <input type="text" name="bath" placeholder="bath" value="<%= item.bath %>">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group input-group-lg">
                                        <label for="code">Sqft</label>
                                        <input type="text" name="sqft" placeholder="sqft" value="<%= item.sqft %>">
                                    </div>
                                    <div class="form-group input-group-lg">
                                        <label for="code">Location</label>
                                        <input id="location" type="text" name="location" placeholder="location" value="<%= item.location %>">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <input id="pac-input" class="controls" type="text"
                                           placeholder="Enter a location">
                                    <div id="map"></div>
                                    <div id="infowindow-content">
                                        <span id="place-name" class="title"></span><br>
                                        Place ID <span id="place-id"></span><br>
                                        <span id="place-address"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-1">
                                    <div class="container">
                                        <div class="form-group input-group-lg">
                                            <button type="submit" class="btn btn-lg btn-success"><%= data.btnText %></button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../../partials/admin-footer.ejs %>